    <merge tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
        tools:layout_width="match_parent"
        tools:layout_height="wrap_content"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:showIn="@layout/item_agenda_light">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
                                             
                                                         
            android:tag="layout/include_agenda_contents_0"            
            tools:background="#eee" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/agenda_icon_width"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
                                           
            tools:src="@drawable/ic_agenda_badge"  android:tag="layout/include_agenda_contents_1"/>

        <TextView
            android:id="@+id/agenda_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/agenda_block_padding_vertical"
                                          
            android:textAlignment="viewStart"
            android:textAppearance="?textAppearanceListItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Badge &amp; device pick-up"  android:tag="layout/include_agenda_contents_2"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/agenda_block_padding_vertical"
            android:textAlignment="viewStart"
            android:textAppearance="?textAppearanceBody2"
            app:layout_constraintEnd_toEndOf="@id/agenda_title"
            app:layout_constraintStart_toStartOf="@id/agenda_title"
            app:layout_constraintTop_toBottomOf="@id/agenda_title"
                                           
                                               
                                          
            tools:text="8:00 AM - 7:00 PM"  android:tag="layout/include_agenda_contents_3"/>

    </merge>

         